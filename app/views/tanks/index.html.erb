<table>
    <tr>
      <td>Номер цистерны</td>
      <% @all_tanks.each do |tank| %>
        <th><%= tank.id %></th>
      <% end %>
    </tr>
     <tr>
      <td>Объем цистерны</td>
      <% @all_tanks.each do |tank| %>
        <td><%= tank.max_volume %></td>
      <% end %>
     </tr>
     <tr>
      <td>Наполненность</td>
      <% @all_tanks.each do |tank| %>
        <td><%= tank.fullness %></td>
      <% end %>
     </tr>
     <tr>
      <td>Тип топлива</td>
      <% @all_tanks.each do |tank| %>
        <td><%= fuel_name_by_id(tank.fuel_type_id) %></td>
      <% end %>
     </tr>
